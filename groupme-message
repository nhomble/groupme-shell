hasConfig || exit $!
source $GROUPME_CONFIG

while true; do
    read IN
    if [[ "$IN" == "/q" ]]; then
        break
    elif [[ "$IN" == "" ]]; then
        continue
    fi
    IN="$(_escape $IN)"
    guid="$(uuidgen)"
    msg="{\"message\": {\"source_guid\": \"$guid\", \"text\": \"$IN\"}}"
    silence=$(curl --silent $GROUPME_API_BASE/groups/$GROUPME_GROUP_ID/messages?token=$GROUPME_TOKEN -H "Content-Type: application/json" -d "$msg")
    IN=""
done
